<?xml version="1.0" encoding="utf-8"?>
<resources>
    // Anime
    <style name="CardViewShapeableImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>
    <style name="CardViewTitle" parent="">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginStart">1dp</item>
        <item name="android:layout_marginEnd">1dp</item>
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:alpha">0.9</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>
    <style name="CardViewDescription" parent="">
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginStart">1dp</item>
        <item name="android:layout_marginEnd">1dp</item>
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:alpha">0.6</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>
    // TabLayout
    <style name="TabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">15sp</item>
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="textAllCaps">false</item>
    </style>
    <style name="TabIndicator" parent="android:Widget">
        <item name="tabIndicatorColor">@color/orange</item>
        <item name="tabSelectedTextColor">@color/orange</item>
        <item name="tabIndicatorAnimationMode">elastic</item>
        <item name="tabIndicatorFullWidth">false</item>
        <item name="tabIndicatorHeight">3dp</item>
        <item name="tabPaddingStart">22dp</item>
        <item name="tabPaddingEnd">22dp</item>
    </style>
    <style name="BottomNavigationView" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="BottomNavigationView.Active" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="ThemeOverlay.AppTheme.BottomNavigationView" parent="@style/ThemeOverlay.MaterialComponents">
        <item name="colorSurface">@null</item>
    </style>


    <style name="CollapsedAppBar" parent="@android:style/TextAppearance">
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:textColor">@color/text</item>
    </style>

    <style name="ExpandedAppBar" parent="@android:style/TextAppearance">
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:textColor">@android:color/transparent</item>
    </style>
    <style name="fab_circle" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">25%</item>
    </style>

    <style name="LayoutHeader">
        <item name="android:textSize">@dimen/h2_text_size</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:gravity">center</item>
        <item name="android:alpha">0.9</item>
        <item name="android:includeFontPadding">false</item>
    </style>
    <style name="TextLabel">
        <item name="android:textSize">@dimen/b_text_size</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:gravity">center</item>
        <item name="android:alpha">0.7</item>
        <item name="android:includeFontPadding">false</item>
    </style>
    <style name="TextValue" parent="TextLabel">
        <item name="android:alpha">0.9</item>
    </style>

    <style name="TextLabelAlpha" parent="TextLabel">
        <item name="android:alpha">0.5</item>
    </style>

    <style name="ShapeAppearanceOverlayExtended" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>
    <style name="ToggleButtonWithIcon" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="iconGravity">textStart</item>
        <item name="android:minWidth">56dp</item>
        <item name="android:minHeight">56dp</item>
        <item name="strokeWidth">0dp</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="rippleColor">@android:color/transparent</item>
    </style>
    <style name="layout_detail_item">
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:background">@drawable/layout_detail_background</item>
    </style>
    <style name="StatusMaterialButton">
        <item name="android:layout_width">16dp</item>
        <item name="android:layout_height">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="cornerRadius">4dp</item>
        <item name="rippleColor">@null</item>
    </style>
</resources>