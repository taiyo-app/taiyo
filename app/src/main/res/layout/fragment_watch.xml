<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    xmlns:tools="http://schemas.android.com/tools">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:contentInsetStart="0dp"
            app:layout_scrollFlags="scroll|enterAlways|snap">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/bg"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/ib_back"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_marginStart="8dp"
                    android:background="@color/bg"
                    app:srcCompat="@drawable/ic_back_24"
                    app:tint="@color/alter_bg"
                    tools:ignore="ContentDescription,SpeakableTextPresentCheck" />

                <TextView
                    android:id="@+id/tv_anime_title"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="64dp"
                    android:textSize="18sp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:includeFontPadding="false"
                    android:gravity="center|start"
                    android:fontFamily="@font/roboto_medium"
                    android:textColor="@color/text"
                    android:background="@null"
                    tools:text="Anime Title"
                    tools:ignore="Autofill" />

            </LinearLayout>


        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:orientation="vertical">

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/dub"
            android:alpha="1"
            android:textColorHint="@color/iconColor"
            android:layout_marginTop="16dp"
            android:layout_marginHorizontal="16dp"
            app:boxCornerRadiusBottomEnd="8dp"
            app:boxCornerRadiusBottomStart="8dp"
            app:boxCornerRadiusTopEnd="8dp"
            app:boxCornerRadiusTopStart="8dp"
            app:endIconTint="@color/iconColor"
            app:startIconTint="@color/iconColor"
            app:startIconDrawable="@drawable/ic_source_24">

            <AutoCompleteTextView
                android:id="@+id/translations"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/roboto_medium"
                android:inputType="none"
                android:padding="8dp"
                android:textAllCaps="true"
                android:textSize="14sp"
                android:textColor="@color/text"
                tools:text="@string/select"
                tools:ignore="LabelFor,TextContrastCheck,DuplicateSpeakableTextCheck" />
        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:gravity="end"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_episodes"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:textSize="16sp"
                android:ellipsize="end"
                android:maxLines="1"
                android:includeFontPadding="false"
                android:gravity="center|start"
                android:fontFamily="@font/roboto_medium"
                android:textColor="@color/text"
                android:background="@null"
                android:text="@string/episode_list"
                tools:ignore="Autofill" />

            <com.google.android.material.button.MaterialButtonToggleGroup
                android:id="@+id/toggleButtonGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:singleSelection="true"
                app:selectionRequired="true"
                app:checkedButton="@id/b_grid_1">

                <Button
                    android:id="@+id/b_grid_1"
                    style="@style/ToggleButtonWithIcon"
                    android:layout_width="48dp"
                    android:layout_height="wrap_content"
                    app:icon="@drawable/ic_list_24" />

                <Button
                    android:id="@+id/b_grid_2"
                    style="@style/ToggleButtonWithIcon"
                    android:layout_width="48dp"
                    android:layout_height="wrap_content"
                    app:icon="@drawable/ic_grid_24" />

                <Button
                    android:id="@+id/b_grid_4"
                    style="@style/ToggleButtonWithIcon"
                    android:layout_width="48dp"
                    android:layout_height="wrap_content"
                    app:icon="@drawable/ic_compact_24" />

            </com.google.android.material.button.MaterialButtonToggleGroup>

            <ImageButton
                android:id="@+id/ib_sort"
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:background="@color/bg"
                app:srcCompat="@drawable/ic_down_24"
                app:tint="@color/alter_bg"
                tools:ignore="ContentDescription,SpeakableTextPresentCheck" />

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_episodes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:spanCount="1"
            tools:listitem="@layout/item_episode_large" />

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>