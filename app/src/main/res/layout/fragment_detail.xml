<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_watch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="32dp"
        app:backgroundTint="@color/orange"
        app:borderWidth="0dp"
        app:elevation="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_play_24"
        app:tint="@color/white"
        tools:ignore="ContentDescription,SpeakableTextPresentCheck,ImageContrastCheck" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/b_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="12dp"
        app:fabCustomSize="42dp"
        app:backgroundTint="@color/ui_bg"
        app:srcCompat="@drawable/ic_back_24"
        app:tint="@color/iconColor"
        style="style/ShapeAppearanceOverlayExtended"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlayExtended"
        app:borderWidth="0dp"
        app:elevation="2dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="ContentDescription,SpeakableTextPresentCheck" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bg">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/gl_poster"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                app:layout_constraintGuide_begin="372dp" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@id/gl_poster">

                <ImageView
                    android:id="@+id/poster_bg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:alpha="0.15"
                    android:scaleType="centerCrop"
                    tools:srcCompat="@tools:sample/backgrounds/scenic"
                    tools:ignore="contentDescription" />

                <ImageView
                    android:id="@+id/gradient_top"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/gradient_height"
                    android:layout_gravity="top"
                    android:background="@drawable/gradient_top_background"
                    tools:ignore="ContentDescription,ImageContrastCheck" />

                <ImageView
                    android:id="@+id/gradient_bottom"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/gradient_height"
                    android:layout_gravity="bottom"
                    android:background="@drawable/gradient_bottom_background"
                    tools:ignore="ContentDescription,ImageContrastCheck" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/layout_margin_top"
                    android:layout_marginHorizontal="78dp"
                    android:layout_marginBottom="@dimen/layout_margin_bottom"
                    android:layout_gravity="center"
                    app:cardCornerRadius="@dimen/main_radius"
                    app:cardElevation="8dp">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/poster"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        tools:ignore="ContentDescription,ImageContrastCheck"
                        tools:srcCompat="@tools:sample/backgrounds/scenic" />

                </androidx.cardview.widget.CardView>

            </FrameLayout>

            <LinearLayout
                android:id="@+id/ll_score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="-4dp"
                android:orientation="horizontal"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/gl_poster"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:visibility="visible" >

                <RatingBar
                    android:id="@+id/rb_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:stepSize="0.1"
                    android:scaleX="1.25"
                    android:scaleY="1.25"
                    android:secondaryProgressTint="@color/orange"
                    android:progressTint="@color/orange"
                    style="@style/Widget.AppCompat.RatingBar.Small"
                    android:rating="5"
                    tools:rating="4.5" />

                <TextView
                    android:id="@+id/tv_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="18dp"
                    style="@style/TextLabel"
                    android:includeFontPadding="false"
                    tools:text="4.6" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="8dp"
                android:layout_marginHorizontal="32dp"
                app:layout_constraintTop_toBottomOf="@id/ll_score"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:textColor="@color/text"
                    android:fontFamily="@font/roboto_bold"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:alpha="0.9"
                    tools:text="@string/get_recommendations"
                    app:layout_constraintTop_toBottomOf="@+id/ll_score"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/title_eng"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    style="@style/TextLabelAlpha"
                    android:gravity="center"
                    android:maxLines="1"
                    android:ellipsize="end"
                    app:layout_constraintTop_toBottomOf="@+id/title"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:text="@string/get_recommendations" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/layout_margin_bottom"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@id/ll_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <include
                    android:id="@+id/layout_info"
                    layout="@layout/layout_info"
                    style="@style/layout_detail_item"
                    android:layout_marginTop="24dp"
                    android:layout_marginStart="0dp"
                    android:layout_marginEnd="0dp"
                    android:layout_marginBottom="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <include
                    android:id="@+id/layout_timer"
                    layout="@layout/layout_timer"
                    style="@style/layout_detail_item"
                    android:layout_width="match_parent"
                    android:layout_marginBottom="2dp"
                    android:layout_height="wrap_content" />

                <include
                    android:id="@+id/layout_description"
                    layout="@layout/layout_description"
                    style="@style/layout_detail_item"
                    android:layout_width="match_parent"
                    android:layout_marginHorizontal="16dp"
                    android:layout_height="wrap_content" />

                <include
                    android:id="@+id/layout_video_kinds"
                    layout="@layout/layout_video_kinds"
                    style="@style/layout_detail_item"
                    android:layout_marginTop="@dimen/layout_margin_top"
                    android:layout_marginStart="0dp"
                    android:layout_marginEnd="0dp"
                    android:layout_marginBottom="-3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <include
                    android:id="@+id/layout_rating"
                    layout="@layout/layout_rating"
                    style="@style/layout_detail_item"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <include
                    android:id="@+id/layout_status"
                    layout="@layout/layout_status"
                    style="@style/layout_detail_item"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <include
                    android:id="@+id/layout_screenshots"
                    layout="@layout/layout_screenshots"
                    style="@style/layout_detail_item"
                    android:layout_marginStart="0dp"
                    android:layout_marginEnd="0dp"
                    android:layout_marginBottom="-3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <include
                    android:id="@+id/layout_similar"
                    layout="@layout/layout_similar"
                    style="@style/layout_detail_item"
                    android:layout_marginStart="0dp"
                    android:layout_marginEnd="0dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>







