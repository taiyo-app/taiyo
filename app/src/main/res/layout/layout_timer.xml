<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:flipTimer="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cl_timer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="16dp"
    android:background="@drawable/layout_detail_background"
    android:orientation="vertical"
    android:visibility="gone"
    tools:visibility="visible">

    <TextView
        android:id="@+id/next_series_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:gravity="center"
        style="@style/TextLabel"
        flipTimer:layout_constraintTop_toTopOf="parent"
        flipTimer:layout_constraintStart_toStartOf="parent"
        flipTimer:layout_constraintEnd_toEndOf="parent"
        tools:text="До выхода 5 серии" />

    <com.asp.fliptimerviewlibrary.CountDownClock
        android:id="@+id/timerProgramCountdown"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:layout_marginTop="8dp"
        android:layout_gravity="center"
        flipTimer:almostFinishedCallbackTimeInSeconds="5"
        flipTimer:countdownTickInterval="1000"
        flipTimer:digitBottomDrawable="@drawable/background_bottom"
        flipTimer:digitPadding="2dp"
        flipTimer:digitTextColor="@color/white"
        flipTimer:digitTextSize="16sp"
        flipTimer:digitTopDrawable="@drawable/background_top"
        flipTimer:digitWidth="36dp"
        flipTimer:halfDigitHeight="18dp"
        flipTimer:resetSymbol="8"
        flipTimer:layout_constraintTop_toBottomOf="@id/next_series_number"
        flipTimer:layout_constraintStart_toStartOf="@id/next_series_number"
        flipTimer:layout_constraintEnd_toEndOf="@id/next_series_number"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="-2dp"
        android:orientation="horizontal"
        flipTimer:layout_constraintTop_toBottomOf="@id/timerProgramCountdown"
        flipTimer:layout_constraintStart_toStartOf="@id/timerProgramCountdown"
        flipTimer:layout_constraintEnd_toEndOf="@id/timerProgramCountdown">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.75"
            android:gravity="center"
            android:text="@string/Days"
            style="@style/TextLabel" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.75"
            android:gravity="center"
            android:text="@string/Hours"
            style="@style/TextLabel" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.75"
            android:gravity="center"
            android:text="@string/Mins"
            style="@style/TextLabel" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.75"
            android:gravity="center"
            android:text="@string/Secs"
            style="@style/TextLabel" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>